<div class="container mt-4">

  <meta name="theme-color" content="#7952b3">

  <main>

    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="font-weight-light">وب سایت خبری ایسنا</h1>
          <p class="lead text-muted">تمام اخبار جهان را یکجا داشته باش!
        </div>
      </div>
    </section>

    <div class="col-lg-12">
      <h3>آخرین خبر ها</h3>
      <hr>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% if(news.docs.length) { %>
          <% news.docs.forEach(item=> { %>
            <div class="col">
              <div class="card shadow-sm">
                <a href="<%= item.path() %>">
                  <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= item.images %>"
                    role="img" focusable="false">
                </a>
                <div class="card-body">
                  <p class="card-text">
                    <%=item.miniBody %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a type="button" href="<%= item.path() %>" class="btn btn-sm btn-outline-secondary">مشاهده</a>

                    </div>
                    <small class="text-muted">
                      <%-date(item.createdAt).fromNow() %>
                    </small>
                  </div>
                </div>
              </div>
            </div>



            <% })%>
              <% } else { %>
                <div class="row">
                  <p>هنوز خبری درج نشده</p>
                </div>
                <%} %>
      </div>
    </div>

    <div class="album py-5 bg-light">
      <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        </div>
      </div>
    </div>

  </main>

  <footer class="text-muted py-5">
    <div class="container">
      <p class="float-end mb-1">
        <a href="#">درباره ایسنا</a>
      </p>
      <p class="mb-1">ایسنا یک پایگاه خبری است که توسط دانشجویان جوان تهران مدیریت میشود.</p>

    </div>
  </footer>










</div>

<script src="/js/jquery-3.3.1.min.js"></script>
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>








<script src="/docs/5.0/dist/js/bootstrap.bundle.min.js"
