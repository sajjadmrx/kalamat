<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">

    <h2>کاربران سایت</h2>
    <div class="btn-group">
        <a href="/admin/users/roles" class="btn btn-sm btn-primary">بخش سطح دسترسی</a>
        <a href="/admin/users/create" class="btn btn-sm btn-danger">ایجاد کاربر جدید</a>
    </div>

</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>نام کاربر</th>
                <th>ایمیل</th>
                <th>تعداد کامنت ها</th>
                <th>تعداد دوره های خریداری شده</th>
                <th>تعداد دوره های تدریس شده</th>
                <th>تاریخ عضویت</th>

                <th>تنظیمات</th>
            </tr>
        </thead>
        <tbody>
            <% users.docs.forEach(user=> { %>
                <tr>
                    <td><a>
                            <%= user.name %>
                        </a></td>
                    <td>
                        <%= user.email%>
                    </td>
                    <td>
                        <%=user.comments.length%>
                    </td>
                    <td>
                        <%=user.learning.length%>
                    </td>
                    <td>
                        <%=user.courses.length%>
                    </td>

                    <td>
                        <%= date(user.createdAt).fromNow() %>
                    </td>

                    <td>
                        <form action="/admin/users/<%= user.id %>?_method=DELETE" method="post">
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/users/<%= user.id %>/toggleadmin" class="btn btn-info">
                                    <%= user.admin ? 'لغو مدیریت' : 'مدیریت' %>
                                </a>
                                <% if(user.admin) { %>
                                    <a href="/admin/users/<%= user.id %>/addrole" class="btn btn-success">اعمال سطح
                                        دسترسی</a>
                                    <% } %>
                                        <button type="submit" class="btn btn-danger">حذف</button>
                            </div>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include(viewPath('layouts/pagination') ,{ pagination : users}) %>
</div>